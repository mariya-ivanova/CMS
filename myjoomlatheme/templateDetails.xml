<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 3.0//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/3.0/template-install.dtd">
<extension version="1.0" type="template" client="site">
	<name>myproject1</name>
	<version>1.0</version>
	<creationDate>5/9/2013</creationDate>
	<author>Mariya Ivanova</author>
	<authorEmail>student@telerik.com</authorEmail>
	<copyright>Copyright (C) 2013 Mariya Ivanova. All rights reserved.</copyright>
	<description>Template for the Myproject1 website</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>	
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>less</folder>		
	</files>
	<positions>
		<position>toolbar-l</position>
		<position>toolbar-r</position>
		<position>banner</position>
        <position>headerbar</position>
		<position>feature</position>
		<position>sidebar-a</position>	
		<position>sidebar-b</position>	
		<position>footer-a</position>
		<position>footer-b</position>
		<position>footer-c</position>
		<position>footer-d</position>
		<position>debug</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_myproject1.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_myproject1.sys.ini</language>		
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#111"
					label="TPL_MYPROJECT1_COLOR_LABEL"
					description="TPL_MYPROJECT1_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#555"
					label="TPL_MYPROJECT1_BACKGROUND_COLOR_LABEL"
					description="TPL_MYPROJECT1_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_MYPROJECT1_LOGO_LABEL"
					description="TPL_MYPROJECT1_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_MYPROJECT1_FONT_LABEL"
					description="TPL_MYPROJECT1_FONT_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
								
				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_MYPROJECT1_FONT_NAME_LABEL"
					description="TPL_MYPROJECT1_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group"
					default="0"
					label="TPL_MYPROJECT1_FLUID_LABEL"
					description="TPL_MYPROJECT1_FLUID_DESC"
				>
					<option value="0">TPL_MYPROJECT1_STATIC</option>
					<option value="1">TPL_MYPROJECT1_FLUID</option>
				</field>
								
			</fieldset>
		</fields>
	</config>
		
</extension>